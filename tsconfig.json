{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks" : false,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/**/*"
  ]
}